{
    "root": true,
    "parser": "typescript-eslint-parser",
    "env": {
        "browser": true,
        "jest": true,
        "es6": true
    },
    "extends": [
      "xo-react/space",
      "xo-space/esnext"
    ],
    "plugins": [
      "react",
      "import"
    ],
    "globals": {
      "module": true,
      "require": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "linebreak-style": 0,
        "semi": 0,
        "curly": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                "",
                ".js",
                ".jsx"
              ]
            }
          }
        }
      }
    }
}
