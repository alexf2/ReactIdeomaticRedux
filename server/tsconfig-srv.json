{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "esnext"
     ],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "../.tmp-srv",
    "rootDir": "server",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "jasmine",
      "lodash",
      "node",
      "koa",
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "!node_modules/**",
    "!**/*-spec.ts"
  ]
}
