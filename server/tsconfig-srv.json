{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": [
      "esnext"
     ],

    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "jest",
      "lodash",
      "node",
      "koa",
      "convict",
      "koa-bodyparser",
      "koa-router",
      "ramda",
      "supertest-as-promised",
      "uuid",
      "winston"
    ]
  },
  "compileOnSave": false,
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [    
    "node_modules/**",
    "__tests__/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*-spec.ts",
    "**/*-spec.tsx"
  ]
}
