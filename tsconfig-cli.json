{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "client",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "axios",
      "react-router",
      "react",
      "react-dom",
      "es6-shim",
      "lodash",
      "redux",
      "immutable",
      "redux-thunk"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "!node_modules/**"
  ]
}
