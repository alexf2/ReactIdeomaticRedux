{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "axios",
      "react-router",
      "react",
      "react-dom",      
      "jasmine",
      "es6-shim",
      "lodash",
      "redux",
      "immutable",
      "redux-thunk"
    ]
  },
  "compileOnSave": false,
  "include": ["client/**/*.tsx", "client/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "__tests__/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*-spec.ts",
    "**/*-spec.tsx"
  ]
}
